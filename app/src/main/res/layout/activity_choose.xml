<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/not_found_img"
    tools:context="com.transportation.lm14.transport.activity.ChooseActivity">

    <RelativeLayout
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/r_logo" />

        <TextView
            android:id="@+id/rakhine"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/img"
            android:text="  Rakhine"
            android:textColor="#00BFA5"
            android:textSize="25sp" />

        <TextView
            android:textStyle="normal"
            android:id="@+id/Apptitle"
            android:layout_toRightOf="@id/rakhine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text=" Transport"
            android:textColor="#00BFA5"
            android:textSize="25sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/startCity"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="47dp"
        android:textAllCaps="false"
        android:text="Start City"
        android:textColor="#2d2c2c"
        android:paddingRight="20dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableRight="@drawable/choose_arrowdown"
        android:drawablePadding="190dp"
        android:background="@drawable/btn_pressed_bg"
        android:layout_below="@+id/pageTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/endCity"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:textAllCaps="false"
        android:text="End City"
        android:textColor="#2d2c2c"
        android:paddingLeft="5dp"
        android:drawableRight="@drawable/choose_arrowdown"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawablePadding="190dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/startCity"
        android:background="@drawable/btn_pressed_bg"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/endCity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        android:background="@drawable/btn_pressed_bg"
        android:text="GO" />

</RelativeLayout>

</ScrollView>